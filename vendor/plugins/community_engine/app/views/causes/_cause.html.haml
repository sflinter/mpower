.hentry
  %h4.entry-title
    = link_to cause.name, user_cause_path(cause.user, cause), :rel => 'bookmark'

  .vcard.author
    %h5
      %a{:href=>"#{user_cause_path(cause.user, cause)}", :class=>"photo", :rel=>"bookmark"}
        =image_tag((cause.first_image_in_body || cause.user.avatar_photo_url(:thumb)), :alt=>"", :width=>"150")

  .entry-content
    = truncate_words(cause.description, 100, '...')

    %h6=link_to :read_more.l, user_cause_path(cause.user, cause), :rel => 'bookmark'
