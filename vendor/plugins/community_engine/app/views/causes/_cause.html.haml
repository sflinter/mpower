%h3
  = cause.name
  = "(#{cause.metro_area.to_s})" unless cause.metro_area.blank?
- if (logged_in? && (cause.user.eql?(current_user) || admin?))
  .cause-edit-link
    = link_to :edit.l, edit_cause_path(cause)
    |
    = link_to :destroy.l, cause_path(cause), :confirm => :are_you_sure.l, :method => :delete
